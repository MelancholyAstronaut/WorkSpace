<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ch6.dao.userDao">
    <resultMap id="selectBook" type="user">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <association property="book" column="id" javaType="book" select="ch6.dao.bookDao.selectBookById"/>
    </resultMap>
    <select id="findAll" resultMap="selectBook">
        select * from users;
    </select>
</mapper>