<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hrm.user.dao.IUserInfDao">

    <sql id="Base_Column_List">
    ID, loginname, `PASSWORD`, `STATUS`, createdate, username
  </sql>
    <insert id="addUser" parameterType="UserInf">
    insert into user_inf (username, `PASSWORD`, `STATUS`,loginname)
    values (#{username,jdbcType=VARCHAR}, #{password,jdbcType=VARCHAR}, #{status,jdbcType=INTEGER},#{loginname,jdbcType=VARCHAR})
    </insert>
    <update id="modifyUser">
        update user_inf
        <set>
            <if test="loginname != null">
                loginname = #{loginname,jdbcType=VARCHAR},
            </if>
            <if test="password != null">
                `PASSWORD` = #{password,jdbcType=VARCHAR},
            </if>
            <if test="status != null">
                `STATUS` = #{status,jdbcType=INTEGER},
            </if>
            <if test="createdate != null">
                createdate = #{createdate,jdbcType=TIMESTAMP},
            </if>
            <if test="username != null">
                username = #{username,jdbcType=VARCHAR},
            </if>
        </set>
        where ID = #{id,jdbcType=INTEGER}
    </update>
    <delete id="removeUser" parameterType="int">
        delete from hrm.user_inf  where ID=#{id}
    </delete>
    <select id="selectByNameAndPassword" parameterType="map" resultType="UserInf">
        select
        <include refid="Base_Column_List"/>
        from user_inf
        where loginname = #{name} and password = #{password}
    </select>
    <select id="findUser" resultType="UserInf">
        select
        <include refid="Base_Column_List"/>
        from
        user_inf
        <where>
            <if test="username!=null and username != ''">
                username like "%" #{username} "%"
            </if>
            <if test="status!=null and status != ''">
                and status = #{status}
            </if>
        </where>

    </select>
    <select id="findUserById" resultType="UserInf">
        select
        <include refid="Base_Column_List"/>
        from
        user_inf
        where id = #{id}
    </select>
    <select id="findUserByLoginUser" resultType="com.hrm.commons.beans.UserInf">
        select * from user_inf where loginname=#{loginname} and password=#{password}
    </select>

</mapper>