class Solution {
public:
    int equalSubstring(string s, string t, int maxCost) {
        int n = s.size();
        vector<int> costs(n);

        for (int i = 0; i < n; i++)
            costs[i] = abs(s[i] - t[i]);

        int best = 0, cost = 0;

        for (int i = 0, j = 0; i < n; i++) {
            while (j < n && cost + costs[j] <= maxCost)
                cost += costs[j++];

            best = max(best, j - i);
            cost -= costs[i];
        }

        return best;
    }
};